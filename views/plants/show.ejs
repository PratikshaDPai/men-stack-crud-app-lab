<!-- views/plants/show.ejs -->

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= plant.name %></title>
    <!-- Dynamic title based on plant name -->
  </head>
  <body>
    <h1><%= plant.name %></h1>
    <img src="<%= plant.image %>" />
    <form action="/plants/<%=plant._id%>?_method=DELETE" method="POST">
      <button type="submit">Delete <%= plant.name %></button>
    </form>
    <form action="/plants/edit/<%=plant._id%>" method="GET">
      <button type="submit">Edit <%= plant.name %></button>
    </form>

    <a href="/plants">Back to Plants</a>
  </body>
</html>
