<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plants Index</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <div class="container">
      <nav>
        <a href="/plants" class="nav-link">Browse Plants</a>
        <a href="/plants/new" class="nav-link">Add New Plant</a>
      </nav>

      <h1>All Plants</h1>

      <ul class="plant-list">
        <% plants.forEach(plant => { %>
        <li class="plant-card">
          <a href="/plants/<%= plant._id %>">
            <img
              src="<%= plant.image %>"
              alt="<%= plant.name %>"
              class="thumbnail"
            />
            <p class="plant-name"><%= plant.name %></p>
          </a>
        </li>
        <% }); %>
      </ul>
    </div>
  </body>
</html>
