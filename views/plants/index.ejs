<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Plants Index</title>
    <link rel="stylesheet" href="/css/styles.css" />
  </head>
  <body>
    <a href="/plants">Browse Plants</a>
    <a href="/plants/new">Add New Plant</a>
    <h1>All Plants</h1>
    <ul>
      <% plants.forEach(plant => { %>
      <li>
        <a href="/plants/<%= plant._id %>"><%= plant.name %></a>
        <img src="<%= plant.image %>" class="thumbnail" />
      </li>
      <% }); %>
    </ul>
  </body>
</html>
